<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_alignParentTop="true"
        android:id="@+id/complete_Qy_Query"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:id="@+id/qyType_txt"
            android:hint="选择查看企业类型"
            android:textSize="12sp"
            android:background="@drawable/texthintshape"
            android:gravity="center"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:spinnerMode="dialog"
            android:layout_weight="0.5"
            android:id="@+id/spinner_bhq"
            android:textSize="12sp"
            ></Spinner>
    </LinearLayout>


        <ListView
            android:id="@+id/complete_list_view"
            android:layout_below="@id/complete_Qy_Query"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:longClickable="true"
            ></ListView>


</RelativeLayout>