<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="0.7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textviewshape"
            android:gravity="center"
            android:alpha="0.7"
            android:text="监测点信息"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info_window_layout_id"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_window_txt_id"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/textviewshape"
            android:gravity="center"
            android:alpha="0.7"
            android:text="ID:"
             />

        <EditText
            android:id="@+id/info_window_etxt_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editviewshape"
            android:focusable="false"
            android:inputType="textPersonName"
            android:textSize="@dimen/etxt_font_size"
            android:alpha="0.7"
            android:text=""
             />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info_window_layout_jd"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_window_jd_txt"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/textviewshape"
            android:gravity="center"
            android:alpha="0.7"
            android:text="经度:"
            />

        <EditText
            android:id="@+id/info_window_jd_etxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editviewshape"
            android:focusable="false"
            android:inputType="textPersonName"
            android:alpha="0.7"
            android:textSize="@dimen/etxt_font_size"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info_window_layout_wd"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_window_wd_txt"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/textviewshape"
            android:gravity="center"
            android:alpha="0.7"
            android:text="纬度:"
            />

        <EditText
            android:id="@+id/info_window_wd_etxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editviewshape"
            android:focusable="false"
            android:alpha="0.7"
            android:inputType="textPersonName"
            android:textSize="@dimen/etxt_font_size"
            />
    </LinearLayout>
</LinearLayout>